<Window x:Class="Neuron_V2.main.mainUserUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuron_V2.main" xmlns:Icon="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Material"
        mc:Ignorable="d"
        Title="mainUserUI" Height="450" Width="800"
        VisualTextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen">


    <Grid>
        <Button Style="{StaticResource addAccountBtn}" 
            Margin="0,20,19,354" Height="Auto" Grid.Row="0" Width="149">
            <StackPanel Orientation="Horizontal">
                <Icon:PackIconMaterial 
                    Kind="Plus"
                    VerticalAlignment="Center"
                    Width="15"
                    Height="11"
                    Margin="0 1 8 0"/>
                <TextBlock Text="Add Account" FontSize="16" HorizontalAlignment="Right" Width="100" TextOptions.TextFormattingMode="Display"/>
            </StackPanel>
        </Button>



        <TextBlock 
            HorizontalAlignment="Left" 

            VerticalAlignment="Top"
            FontSize="28"
            FontWeight="Medium" 
            Margin="42,20,0,0" Text="Accounts"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            FontWeight="Medium"
            FontSize="13.5"
            Margin="42,76,0,0" 
            Text="Name" 
            VerticalAlignment="Top"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            FontWeight="Medium"
            FontSize="13.5"
            Margin="244,76,0,0" 
            Text="Running" 
            VerticalAlignment="Top"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            FontWeight="Medium"
            FontSize="13.5"
            Margin="321,76,0,0" 
            VerticalAlignment="Top" Height="21"><Run Text="Relaunch when closed"/><LineBreak/><Run/></TextBlock>
        <TextBlock 
            HorizontalAlignment="Left" 
            FontWeight="Medium"
            FontSize="13.5"
            Margin="125,76,0,0" 
            VerticalAlignment="Top" Height="21"><Run Text="Description"/><LineBreak/><Run/></TextBlock>

        <TextBox 
            HorizontalAlignment="Left" 
            Height="15" Margin="32,94,0,0"
            FontWeight="Medium"
            Text=""
            BorderThickness="0 0 0 2"
            VerticalAlignment="Top" 
            Width="547"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            FontWeight="Medium"
            FontSize="13.5"
            Margin="670,158,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top" Height="63" Width="103"><Run Text="Switch VPN on unexpected client behavior"/><LineBreak/><Run/></TextBlock>
        <Button Style="{StaticResource addAccountBtn}" 
            Margin="0,76,19,298" Height="Auto" Grid.Row="0" Width="149" Background="#bae8f7">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Trading Bot (WIP)" FontSize="16" HorizontalAlignment="Center" Width="124" TextOptions.TextFormattingMode="Display"/>
            </StackPanel>
        </Button>



    </Grid>
</Window>
